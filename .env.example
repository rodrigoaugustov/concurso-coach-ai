# Configurações do PostgreSQL
# Local: valores específicos para desenvolvimento
# Railway: será substituído pela variável ${{Postgres.DATABASE_URL}}
POSTGRES_DB=concursocoach
POSTGRES_USER=coach
POSTGRES_PASSWORD=supersecretpassword

# URL de Conexão com o Banco de Dados
# Local: aponta para container docker 'db'
# Railway: usar DATABASE_URL do Railway PostgreSQL
DATABASE_URL="postgresql+psycopg2://coach:supersecretpassword@db:5432/concursocoach"

# URL de Conexão com o Redis
# Local: aponta para container docker 'redis'
# Railway: usar REDIS_URL do Railway Redis
REDIS_URL="redis://redis:6379"

# Chave secreta para JWT
# IMPORTANTE: Use uma chave diferente em produção!
JWT_SECRET_KEY="eb06491b62a39cea00b1186ffe151212"

# Configurações do Google Cloud Storage
GCS_BUCKET_NAME="coach-concursos-editais-bucket"
GCP_PROJECT_ID="concurso-coach-ai-app"
GOOGLE_CLOUD_PROJECT="concurso-coach-ai-app"
GEMINI_API_KEY="sua_gemini_api_key_aqui"

# Configurações do Redis para Celery
# Local: usar containers docker
# Railway: usar REDIS_URL do Railway
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/0"

# --- LANGSMITH TRACING ---
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY="sua_langchain_api_key_aqui"
LANGCHAIN_PROJECT=CoachConcursos

# --- RAILWAY SPECIFIC ---
# Estas variáveis são definidas automaticamente pelo Railway
# PORT=8000 (backend) ou PORT=3000 (frontend)
# RAILWAY_STATIC_URL (URL pública do serviço)
# DATABASE_URL (URL completa do PostgreSQL)
# REDIS_URL (URL completa do Redis)